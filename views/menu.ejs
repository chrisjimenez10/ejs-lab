    <h2>Main</h2>
    <% menu.forEach(dish => { %>
        <% if (dish.category === "mains") { %>
            <ul>
                <li><%= dish.name %>: $<%= dish.price %>
                    <p>
                        Details: <em><%= dish.details %></em><br>Rating: <%= dish.rating %>
                    </p>
                </li>
            </ul>
    <% } %>
    <% }) %>
